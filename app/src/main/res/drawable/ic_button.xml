<!-- res/drawable/ic_searchbar.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của hình chữ nhật -->
    <solid android:color="#61D0EC" />

    <!-- Viền của hình chữ nhật -->
    <stroke
        android:width="1dp"
        android:color="#DFDFDF" />

    <!-- Bo tròn các cạnh của hình chữ nhật -->
    <corners android:radius="12dp" />

    <!-- Padding bên trong của hình chữ nhật -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>